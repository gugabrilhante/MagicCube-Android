<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gustavo.brilhante.magiccubev2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="gustavo.brilhante.magiccubev2.activity.MagicCubeActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity
            android:name="gustavo.brilhante.magiccubev2.activity.MenuActivity"
            android:exported="true" android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gustavo.brilhante.magiccubev2.activity.OptionsActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>